<!DOCTYPE html>
<html>

<head>
  <title>i快答</title>
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/index.css' />
  <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.bootcss.com/react-bootstrap/0.31.0/react-bootstrap.min.js"></script>
  <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" rel="stylesheet">
  <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <script src="https://cdn.bootcss.com/jquery/3.0.0/jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/css/master.css">
  <style>
  </style>
</head>

<body>
  <% include head %>
  <div class="container">
    <div class="row" id="head">
      <div class="col-md-12 col-xs-12 col-sm-12" id="allTwo">
        <span class="active"><a href="#">全部</a></span>
        <span>
          <% data4.forEach(function(quest){ %>
            <a class="index-a" href="#"><%= quest.type %></a>
            <% }) %>
          </span>
        </div>

        <br><br>

      </div>
      <div class="col-md-9" id="left">
        <br>
        <div class="col-md-12" id="allOne">
          <span class="active"><a href="/">全部</a></span>
          <span><a href="#">悬赏</a></span>
          <span><a href="#">非悬赏</a></span>
          <span><a href="#">提问中</a></span>
          <span><a href="#">已解决</a></span>
        </div>
        <br><br>
          <% data1.forEach(function(quest){ %>
            <div class="row">
              <div class="col-md-12 col-xs-12 col-sm-12">
                <div  id="looktg">
                  <div class="col-md-1 col-xs-4 col-sm-4" id="look">
                    <p><%= quest.pageviews %></p>
                    浏览量
                  </div>
                  <div class="col-md-2 col-xs-4 col-sm-4" id="time">
                    <% if(quest.validTime){ %>
                    <p class="time"><%= quest.createTime %></p>
                    悬赏时间
                    <% }else{ %>
                    <p class="line"><%= quest.createTime %></p>
                    提问时间
                    <% } %>
                  </div>

                  <div class="col-md-8 col-xs-12 col-sm-12" id="">

                      <div class="ccol-md-12 col-xs-12 col-sm-12" id="title">
                        <h4><a href=/question/<%= quest._id %>><%= quest.title %></a></h4>
                      </div>
                      <div class="col-md-12 col-xs-12 col-sm-12" id="lable">
                        <span><a class="label-a" href="#"><%= quest.type %></a></span>
                        <div class="col-md-2 col-xs-3 col-sm-3 navbar-right" id="label">
                          <span class="search-span"><i class="glyphicon glyphicon-usd"></i><span><%= quest.money %></span></span>
                        </div>
                      </div>

                  </div>
                </div>
              </div>
            </div>
            <% }) %>

          </div>
          <br>
          <div class="col-md-3 col-xs-12 col-sm-12">
            <div class="l-w question">
              <p><i class="fa fa-question-circle-o fa-lg" aria-hidden="true">&nbsp;</i><b>你能难住我吗？ 能！！！</b></p>
              <br>
              <a class="btn btn-danger btn-lg col-md-12 col-xs-12 col-sm-12" href="/publish"><span id="spa">提 问</span></a>
            </div>
            <br>
            <div class="l-t list" >
              <div class="l-xs list-money" >
              <i class="fa fa-money " aria-hidden="true"></i>&nbsp;&nbsp;赏金榜
              </div>

              <ol>
                <% data2.forEach(function(ranko){ %>
                  <li>
                    <a href=/question/<%= ranko._id %>> <%= ranko.title %></a>
                    <div style="border:1px solid blue;padding:10px 10px;background-color:#fff;border-radius:3px;text-align:center;position: absolute;opacity: 1; color:lightblue"><%= ranko.title %></div>
                    <span>￥&nbsp;<%= ranko.money %></span>
                  </li>
                  <% }) %>
                </ol>
              </div>

              <div class="l-t list" >
                <div class="l-xs list-person" >
                  <i class="fa fa-free-code-camp" aria-hidden="true"></i>&nbsp;&nbsp;达人榜
                </div>
                <br>

                <ol>
                  <% data3.forEach(function(user){ %>
                    <li>
                      <img src="<% user.headPortrait %>" alt="">
                      <a href=/userinfo/<%= user._id %>><%= user.nickName %></a>
                      <span style="display:none;"><%= user.totalReward %></span>
                    </li>
                    <% }) %>
                  </ol>
                </div>

                <div class="l-l list" >
                  <div class="list-hot">
                    &nbsp;<i class="fa fa-fire" aria-hidden="true">&nbsp;</i>热搜榜
                  </div>
                  <ol>
                    <% data4.forEach(function(ranks){ %>
                      <li>
                        <a href=/question/<%= ranks._id %>><%= ranks.title %></a>
                        <span><%= ranks.pageviews %></span>
                      </li>
                      <% }) %>

                    </ol>
                  </div>
                </div>




            </div>

            <% include foot %>

            <div class="container" id="react-root"></div>
            <script type="text/javascript" src="/js/index.js"></script>
            <script type="text/javascript">
            $(document).ready(function(){
              $("#change-s span").click(function(){
                $(this).addClass("active").siblings().removeClass("active")
              })
            })
            </script>
          </body>

          </html>
